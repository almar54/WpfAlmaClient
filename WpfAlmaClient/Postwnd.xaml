<Window x:Class="WpfAlmaClient.Postwnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAlmaClient"
        mc:Ignorable="d"
        Title="Postwnd"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition MinHeight="100"
                           MaxHeight="300" />
            <RowDefinition Height="160" />
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <TextBlock Text="Title" />
            <TextBlock Text=" By alma22" />
            <TextBlock Text=" Category: Clothes" />
        </WrapPanel>
        <TextBlock Grid.Row="1"
                   Text="description" />
        <WrapPanel Grid.Row="2"
                   x:Name="photoWrapPanel"
                   Orientation="Horizontal">
            <Image Source="/Images/Posts/Post1/hoodie1.jpg"
                   Width="150"
                   Height="150"
                   Margin="5" />
            <Image Source="/Images/Posts/Post1/shirt1.jpg"
                   Width="150"
                   Height="150"
                   Margin="5" />
            <Image Source="/Images/Posts/Post1/shirt2.jpg"
                   Width="150"
                   Height="150"
                   Margin="5" />
            <Image Source="/Images/Posts/Post1/hoodie2.jpg"
                   Width="150"
                   Height="150"
                   Margin="5" />
            <Image Source="/Images/Posts/Post1/pants2.jpg"
                   Width="150"
                   Height="150"
                   Margin="5" />
            <Image Source="/Images/Posts/Post1/pants3.jpg"
                   Width="150"
                   Height="150"
                   Margin="5" />
        </WrapPanel>
    </Grid>
</Window>
